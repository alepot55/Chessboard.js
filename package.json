{
  "name": "@alepot55/chessboardjs",
  "version": "3.0.0",
  "description": "A modern, high-performance interactive chessboard library with TypeScript support",
  "type": "module",
  "main": "dist/chessboard.cjs.js",
  "module": "dist/chessboard.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/chessboard.esm.js",
      "require": "./dist/chessboard.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./css": "./dist/chessboard.css",
    "./styles": "./dist/chessboard.css"
  },
  "files": [
    "dist",
    "src",
    "assets"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src tests --ext .js,.ts,.tsx",
    "lint:fix": "eslint src tests --ext .js,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,ts,css}\" \"tests/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,css}\" \"tests/**/*.{js,ts}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "prepare": "husky",
    "precommit": "lint-staged",
    "clean": "rimraf dist coverage .vitest",
    "size": "size-limit",
    "prepublishOnly": "npm run validate && npm run build",
    "release": "npm run validate && npm run build && changeset publish"
  },
  "dependencies": {
    "chess.js": "^1.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.0.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "size-limit": "^11.0.0",
    "terser": "^5.27.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "chess.js": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "chess.js": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": {
    "name": "alepot55",
    "url": "https://github.com/alepot55"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alepot55/ChessBoard.git"
  },
  "bugs": {
    "url": "https://github.com/alepot55/ChessBoard/issues"
  },
  "homepage": "https://github.com/alepot55/ChessBoard#readme",
  "keywords": [
    "chess",
    "chessboard",
    "chess-ui",
    "chess-game",
    "interactive-chess",
    "chess-library",
    "typescript",
    "javascript",
    "canvas",
    "game",
    "board-game"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/chessboard.esm.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/chessboard.css",
      "limit": "10 KB"
    }
  ]
}
